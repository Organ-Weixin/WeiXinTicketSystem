@model CreateOrUpdateModuleViewModel
@{
    ViewData["System"] = "active";
    ViewData["Module"] = "active";
    ViewBag.Title = Model.Id > 0 ? "模块编辑" : "模块添加";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @(Model.Id > 0 ? "模块编辑" : "模块添加")
        <small>模块管理</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="javascript:;"><i class="fa fa-cog"></i> 系统管理</a></li>
        <li><a href="@Url.Action(MvcNames.Module.Index)"><i class="fa fa-group"></i> 模块管理</a></li>
        <li class="active">@(Model.Id > 0 ? "模块编辑" : "模块添加")</li>
    </ol>
</section>

@using (Ajax.BeginForm(MvcNames.Module._CreateOrUpdate, null, null, new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "App.onOperationSuccessSimple",
    OnBegin = "App.onFormCommitBegin",
    OnComplete = "App.onFormCommitComplete"
}, new { @class = "form-horizontal" }))
{
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->

        <div class="row">
            <div class="col-xs-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">基础信息</h3>
                    </div>
                    <div class="modal-body">
                        @Html.EditorFor(x => x.Id)
                        @Html.EditorFor(x => x.ModuleName)
                        @Html.EditorFor(x => x.ModuleIcon)
                        @Html.EditorFor(x => x.ModuleParentId)
                        @Html.EditorFor(x => x.ModuleSequence)
                        @Html.EditorFor(x => x.ModuleFlag)
                    </div>
                </div>
                <fieldset>
                    <button type="submit" class="btn btn-primary col-xs-2 col-xs-offset-3">保存</button>
                    <a class="btn btn-default col-xs-2 col-xs-offset-1" href="@Url.Action(MvcNames.Module.Index)">取消</a>
                </fieldset>
            </div>
        </div>
    </section>
}