@model CreateOrUpdateFilmInfoViewModel
@{
    ViewData["Cinema"] = "active";
    ViewData["FilmInfo"] = "active";
    ViewBag.Title = Model.Id > 0 ? "影片信息编辑" : "影片信息添加";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @(Model.Id > 0 ? "影片信息编辑" : "影片信息添加")
        <small>影片信息管理</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="javascript:;"><i class="fa fa-cog"></i> 系统管理</a></li>
        <li><a href="@Url.Action(MvcNames.FilmInfo.Index)"><i class="fa fa-group"></i> 影片信息管理</a></li>
        <li class="active">@(Model.Id > 0 ? "影片信息编辑" : "影片信息添加")</li>
    </ol>
</section>


@*@using (Ajax.BeginForm(MvcNames.FilmInfo._CreateOrUpdate, null, null, new AjaxOptions*@
@using (Html.BeginForm(MvcNames.FilmInfo._CreateOrUpdate, MvcNames.FilmInfo.Name, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))

{
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->

        <div class="row">
            <div class="col-xs-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">基础信息</h3>
                    </div>
                    <div class="modal-body">
                        @Html.EditorFor(x => x.Id)
                        @Html.EditorFor(x => x.FilmCode)
                        @Html.EditorFor(x => x.FilmName)
                        @Html.EditorFor(x => x.Version)
                        @Html.EditorFor(x => x.Duration)
                        @Html.EditorFor(x => x.PublishDate, new { htmlAttributes = new { @class = "datepicker" } })
                        @Html.EditorFor(x => x.Publisher)
                        @Html.EditorFor(x => x.Producer)
                        @Html.EditorFor(x => x.Director)
                        @Html.EditorFor(x => x.Cast)
                        @Html.EditorFor(x => x.Introduction)
                        @Html.EditorFor(x => x.Score)
                        @Html.EditorFor(x => x.Area)
                        @Html.EditorFor(x => x.Type)
                        @Html.EditorFor(x => x.Language)
                        @Html.EditorFor(x => x.Status)
                        @Html.EditorFor(x => x.Image)
                        @Html.EditorFor(x => x.Trailer)
                    </div>
                </div>
                <fieldset>
                    <button type="submit" class="btn btn-primary col-xs-2 col-xs-offset-3">保存</button>
                    <a class="btn btn-default col-xs-2 col-xs-offset-1" href="@Url.Action(MvcNames.FilmInfo.Index)">取消</a>
                </fieldset>
            </div>
        </div>
    </section>
}

@section scripts{
    <script type="text/javascript">
        $('#PublishDate').datetimepicker({
            language: 'zh-CN',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            minView: 2,
            showMeridian: 0,
            forceParse: 0,
            startView: 2,
            format: 'yyyy-mm-dd'
        });
</script>
}

