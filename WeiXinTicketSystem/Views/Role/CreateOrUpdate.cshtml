@model CreateOrUpdateRoleViewModel
@{
    ViewData["System"] = "active";
    ViewData["Role"] = "active";
    ViewBag.Title = Model.Id > 0 ? "角色编辑" : "角色添加";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @(Model.Id > 0 ? "角色编辑" : "角色添加")
        <small>角色管理</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="javascript:;"><i class="fa fa-cog"></i> 系统管理</a></li>
        <li><a href="@Url.Action(MvcNames.Role.Index)"><i class="fa fa-group"></i> 角色管理</a></li>
        <li class="active">@(Model.Id > 0 ? "角色编辑" : "角色添加")</li>
    </ol>
</section>

@using (Ajax.BeginForm(MvcNames.Role._CreateOrUpdate, null, null, new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "App.onOperationSuccessSimple",
        OnBegin = "App.onFormCommitBegin",
        OnComplete = "App.onFormCommitComplete"
    }, new { @class = "form-horizontal" }))
{
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->

        <div class="row">
            <div class="col-xs-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">基础信息</h3>
                    </div>
                    <div class="modal-body">
                        @Html.EditorFor(x => x.Id)
                        @Html.EditorFor(x => x.Name)
                        @Html.EditorFor(x => x.Description)
                    </div>
                </div>
                <fieldset>
                    <button type="submit" class="btn btn-primary col-xs-2 col-xs-offset-3">保存</button>
                    <a class="btn btn-default col-xs-2 col-xs-offset-1" href="@Url.Action(MvcNames.Role.Index)">取消</a>
                </fieldset>
            </div>
        </div>
    </section>
}