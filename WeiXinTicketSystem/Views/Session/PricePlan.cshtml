@model SetPriceViewModel
@{
    ViewBag.CinemaManage = "active";
    ViewBag.Session = "active";
    ViewBag.Title = Model.PricePlanId > 0 ? "价格设置编缉" : "价格设置添加";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @(Model.PricePlanId > 0 ? "价格设置编缉" : "价格设置添加")
        <small>价格设置</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="javascript:;"><i class="fa fa-cog"></i> 影院管理</a></li>
        <li><a href="@Url.Action(MvcNames.Role.Index)"><i class="fa fa-group"></i> 排期设置</a></li>
        <li class="active">@(Model.PricePlanId > 0 ? "价格设置编缉" : "价格设置添加")</li>
    </ol>
</section>

@using (Ajax.BeginForm(MvcNames.Session._SetPrice, null, null, new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "App.onOperationSuccessSimple",
    OnBegin = "App.onFormCommitBegin",
    OnComplete = "App.onFormCommitComplete"
}, new { @class = "form-horizontal" }))
{
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->

        <div class="row">
            <div class="col-xs-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">基础信息</h3>
                    </div>
                    <div class="modal-body">
                        @Html.EditorFor(x => x.PricePlanId)
                        @Html.EditorFor(x => x.CinemaCode)
                        @Html.EditorFor(x => x.UserID)
                        @Html.EditorFor(x => x.SessionCode)
                        @Html.EditorFor(x => x.FilmCode)
                        @Html.EditorFor(x => x.Price)
                        @Html.EditorFor(x => x.Type)
                    </div>
                </div>
                @*<div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">权限信息</h3>
                    </div>
                    <div class="modal-body">
                        @Html.EditorFor(x => x.Permissions)
                    </div>
                </div>*@
                <fieldset>
                    <button type="submit" class="btn btn-primary col-xs-2 col-xs-offset-3">保存</button>
                    <a class="btn btn-default col-xs-2 col-xs-offset-1" href="@Url.Action(MvcNames.Session.Index)">取消</a>
                </fieldset>
            </div>
        </div>
    </section>
}