@model CreateOrUpdateGivingConditionsViewModel
@{
    ViewData["CinemaManage"] = "active";
    ViewData["GivingConditions"] = "active";
    ViewBag.Title = Model.Id > 0 ? "赠送条件编辑" : "赠送条件添加";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @(Model.Id > 0 ? "赠送条件编辑" : "赠送条件添加")
        <small>赠送条件管理</small>

    </h1>
    <ol class="breadcrumb">
        <li><a href="javascript:;"><i class="fa fa-cog"></i> 影院配置</a></li>
        <li><a href="@Url.Action(MvcNames.GivingConditions.Index)"><i class="fa fa-group"></i> 赠送条件管理</a></li>
        <li class="active">@(Model.Id > 0 ? "赠送条件编辑" : "赠送条件添加")</li>
    </ol>
</section>


@using (Ajax.BeginForm(MvcNames.GivingConditions._CreateOrUpdate, null, null, new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "App.onOperationSuccessSimple",
    OnBegin = "App.onFormCommitBegin",
    OnComplete = "App.onFormCommitComplete"
}, new { @class = "form-horizontal" }))
{
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->

        <div class="row">
            <div class="col-xs-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">基础信息</h3>
                    </div>
                    <div class="modal-body">
                        @Html.EditorFor(x => x.Id)
                        @Html.EditorFor(x => x.CinemaCode)
                        @Html.EditorFor(x => x.Conditions)
                        @Html.EditorFor(x => x.ConponType)
                        @Html.EditorFor(x => x.Price)
                        @Html.EditorFor(x => x.StartDate, new { htmlAttributes = new { @class = "datepicker" } })
                        @Html.EditorFor(x => x.EndDate, new { htmlAttributes = new { @class = "datepicker" } })
                    </div>
                </div>
                <fieldset>
                    <button type="submit" class="btn btn-primary col-xs-2 col-xs-offset-3">保存</button>
                    <a class="btn btn-default col-xs-2 col-xs-offset-1" href="@Url.Action(MvcNames.GivingConditions.Index)">取消</a>
                </fieldset>
            </div>
        </div>
    </section>
}


@section scripts{
    <script type="text/javascript">
        $('#StartDate').datetimepicker({
            language: 'zh-CN',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            minView: 2,
            showMeridian: 0,
            forceParse: 0,
            startView: 2,
            format: 'yyyy-mm-dd'
        });

        $('#EndDate').datetimepicker({
            language: 'zh-CN',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            minView: 2,
            showMeridian: 0,
            forceParse: 0,
            startView: 2,
            format: 'yyyy-mm-dd'
        });
    </script>
}