@model UpdateScreenViewModel
@{
    ViewBag.CinemaManage = "active";
    ViewBag.Screen = "active";
    ViewBag.Title = "重新获取影厅";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        重新获取影厅
        <small>影厅管理</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="javascript:;"><i class="fa fa-cog"></i> 影院管理</a></li>
        <li><a href="@Url.Action(MvcNames.Screen.Index)"><i class="fa fa-group"></i> 影厅管理</a></li>
        <li class="active">重新获取影厅</li>
    </ol>
</section>

@using (Ajax.BeginForm(MvcNames.Screen._Update, null, null, new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "App.onOperationSuccessSimple",
    OnBegin = "App.onFormCommitBegin",
    OnComplete = "App.onFormCommitComplete"
}, new { @class = "form-horizontal" }))
{
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->

        <div class="row">
            <div class="col-xs-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">基础信息</h3>
                    </div>
                    <div class="modal-body">
                        @Html.EditorFor(x => x.CinemaCode)
                    </div>
                </div>
                <fieldset>
                    <button type="submit" class="btn btn-primary col-xs-2 col-xs-offset-3">重新获取</button>
                    <a class="btn btn-default col-xs-2 col-xs-offset-1" href="@Url.Action(MvcNames.Screen.Index)">取消</a>
                </fieldset>
            </div>
        </div>
    </section>
}