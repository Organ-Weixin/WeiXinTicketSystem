@model CreateOrUpdateUserCinemaViewModel
@{
    ViewBag.CinemaConfig = "active";
    ViewBag.UserInfo = "active";
    ViewBag.Title = Model.Id > 0 ? "接入商可访问影院编辑" : "接入商可访问影院添加";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @(Model.Id > 0 ? "接入商可访问影院编辑" : "接入商可访问影院添加")
        <small>影院管理</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="javascript:;"><i class="fa fa-cog"></i> 影院配置</a></li>
        <li><a href="@Url.Action(MvcNames.UserInfo.Index)"><i class="fa fa-group"></i> 接入商管理</a></li>
        <li class="active">@(Model.Id > 0 ? "接入商可访问影院编辑" : "接入商可访问影院添加")</li>
    </ol>
</section>

@using (Ajax.BeginForm(MvcNames.UserCinema._CreateOrUpdate, null, null, new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "App.onOperationSuccessSimple",
    OnBegin = "App.onFormCommitBegin",
    OnComplete = "App.onFormCommitComplete"
}, new { @class = "form-horizontal" }))
{
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->

        <div class="row">
            <div class="col-xs-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">选择有效期</h3>
                    </div>
                    <div class="modal-body">
                        @Html.EditorFor(x => x.ExpDateRange, new { htmlAttributes = new { @class = "daterange" } })
                    </div>
                </div>
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">基础信息</h3>
                    </div>
                    <div class="modal-body">
                        @Html.EditorFor(x => x.Id)
                        @Html.EditorFor(x => x.UserId)
                        @Html.EditorFor(x => x.CinemaCode)
                        @Html.EditorFor(x => x.UserName)
                        @Html.EditorFor(x => x.Password)
                        @Html.EditorFor(x => x.Fee)
                        @Html.EditorFor(x => x.CinemaFee)
                        @Html.EditorFor(x => x.MemberPayType)
                        @Html.EditorFor(x => x.NonMemberPayType)
                        @Html.EditorFor(x => x.RealPrice)
                        @Html.EditorFor(x => x.OpenSnacks)

                    </div>
                </div>

                <fieldset>
                    <button type="submit" class="btn btn-primary col-xs-2 col-xs-offset-3">保存</button>
                    <a class="btn btn-default col-xs-2 col-xs-offset-1" href="@Url.Action(MvcNames.UserCinema.Index)">取消</a>
                </fieldset>
            </div>
        </div>
    </section>

    @section scripts{
        <script type="text/javascript">
            $('#ExpDateRange').daterangepicker({
            "locale": App.dateRangePickerLocal,
            'autoUpdateInput': false
        }).on('cancel.daterangepicker', function () {
            $(this).val(null).trigger('change')
        }).on('apply.daterangepicker', function (ev, picker) {
            $(this).val(picker.startDate.format('MM/DD/YYYY') + ' - ' + picker.endDate.format('MM/DD/YYYY')).trigger('change')
        })
        </script>
    }
}
