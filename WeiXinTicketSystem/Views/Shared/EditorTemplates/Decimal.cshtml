@model object

<div class="form-group">
    @Html.LabelFor(x => x, new { @class = "control-label col-sm-3" + " " + (ViewData.ModelMetadata.IsRequired ? "required" : null) })
    <div class="col-sm-7">
        @Html.TextBoxFor(x => x, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x, "", new { @class = "text-danger" })
        @if (!string.IsNullOrEmpty(ViewData.ModelMetadata.Description))
        {
            <span class="help-block">@ViewData.ModelMetadata.Description</span>
        }
    </div>
</div>